/* 
 * Dette skal gerne placeres i app.tss
 */
".wrapper": {
	left: "0dp",
	right: "0dp"
}
".v": {
	layout: "vertical"
}
".btn": {
	width: "100%",
	height: "50dp",
	borderWidth: 3,
	top: "10dp",
	font: {
		fontFamily: 'brown-regular'
	},
	backgroundColor: "#043540"
}
".txt": {
	backgroundColor: "none",
	height: "50dp",
	color: "#043540",
	hintTextColor: "#043540",
	font: {
		fontFamily: 'eveleth-clean-regular'
	},
	top: "30dp",
	width: "100%",
	height: "50dp",
	top: "10dp",
	borderColor: "#043540",
	borderWidth: 3
}
".bg-green":{
	backgroundColor: "#F6FFE8"
}

/*
 * only for login
 */

".header": {
	height: "75dp",
	top: "0dp",
	width: "100%",
	backgroundColor:"none"
}
".content": {
	top: "20dp",
	height: "350dp",
	overScrollMode: Titanium.UI.Android.OVER_SCROLL_NEVER,
	scrollingEnabled: false,
	showPagingControl: false
}

".btn--signup": {
	top: "50dp"
}

".txt--pass": {
	passwordMask: "true",
	hintText: "password",
	backgroundColor:"none"
}
".txt--email": {
	hintText:"email"
}

".passRemind": {
	color: "#043540",
	font: {
		fontSize: "12dp",
		fontFamily: 'eveleth-clean-regular'
	},
	top: "15dp"
}

".logo": {
	top:"20dp",
	width: "50dp",
	height: "50dp",
	image: "/images/lock.png"
}



